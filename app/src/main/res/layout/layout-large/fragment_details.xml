<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/equalD">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:scrollbars="none"
        style="@style/equalD">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.muhammadfarag.popularmovies.details.DetailsActivityFragment">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/zoka500"
                    android:id="@+id/back_drop_path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginTop="@dimen/text_margin"
                    style="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/release_data"
                    android:layout_width="0dp"
                    style="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_weight="5"/>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">


                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkBox"
                        android:background="@drawable/ic_stars_24dp"
                        android:onClick="itemClicked"
                        android:button="@drawable/favourite_button"
                        android:buttonTint="@android:color/white"
                        />
                    </FrameLayout>
                </LinearLayout>
                <RatingBar
                    style="@style/RatingBar"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"

                    android:numStars="5"
                    android:stepSize="0.01"
                    android:isIndicator="true"/>

                <TextView
                    android:id="@+id/movie_desc"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    style="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    />

            </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Watch Trailer"
                  android:id="@+id/trailer"
                  android:textStyle="bold"
                  android:layout_gravity="center_horizontal"
                  />
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Get REVIEW"
                  android:textStyle="bold"
                  android:id="@+id/review_button"
                  android:layout_gravity="center_horizontal"
                  />
              <ListView
                  android:layout_width="match_parent"
                  android:layout_height="600dp"
                  android:id="@+id/review_list_view">
              </ListView>

          </LinearLayout>
             </LinearLayout>
    </ScrollView>
</FrameLayout>